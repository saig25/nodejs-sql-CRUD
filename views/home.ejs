<link rel="stylesheet" type="text/css" href="styles.css">

<style>
    table, td {
      border: 1px solid black;
    }
</style>

<body>

    <div>
        <div class="d-flex justify-content-center links">
            <button onclick = "func();"> My Details </button>>
        </div>
    </div>

    
    
    <table id="myTable" class="center" style="overflow-x:auto;">
        <tr>
          <td>id</td>
          <td>image</td>
          <td>name</td>
          <td>Email</td>
          <td>total orders</td>
          <td>joined</td>
          <td>last login</td>
        </tr>
      </table>
    
</body>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        function func(){	
            
            const QueryString = window.location.href;
            let paramString = QueryString.split('?')[1];
            let paramString2 = "http://localhost:3000/user" + "?" + paramString;
            console.log(paramString2);
            window.location.href = paramString2;
            
        }

        
        
        var i=1;
      axios
        .get("http://localhost:3000/all")
        .then( response => {
           response.data.forEach(element => {
            var table = document.getElementById("myTable");
            var row = table.insertRow(1);
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);
            var cell4 = row.insertCell(3);
            var cell5 = row.insertCell(4);
            var cell6 = row.insertCell(5);
            var cell7 = row.insertCell(6);
            cell1.innerHTML = element.user_id;
            cell2.innerHTML =   '<img src="'+element.user_image+'" width="100" height="100">';
            cell3.innerHTML =   element.user_name;
            cell4.innerHTML =   element.user_email;
            cell5.innerHTML =   element.total_orders;
            cell6.innerHTML =   element.createdAt;
            cell7.innerHTML =  element.last_login;
            console.log(element);  
            i++
          })
        })
        .catch(error => console.error(error));
    </script>

            
    

